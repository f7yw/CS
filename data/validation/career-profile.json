{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Career Profile Schema",
  "description": "Validation schema for user career profiles and preferences",
  "type": "object",
  "properties": {
    "currentRole": {
      "type": "string",
      "maxLength": 100,
      "description": "Current job title or role"
    },
    "experience": {
      "type": "string",
      "enum": ["entry-level", "1-3-years", "3-5-years", "5-10-years", "10+-years"],
      "description": "Years of professional experience"
    },
    "industries": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "technology",
          "healthcare",
          "finance",
          "education",
          "marketing",
          "engineering",
          "design",
          "sales",
          "consulting",
          "research",
          "government",
          "non-profit",
          "media",
          "retail",
          "manufacturing"
        ]
      },
      "uniqueItems": true,
      "maxItems": 5,
      "description": "Industries of interest"
    },
    "skills": {
      "type": "array",
      "items": {
        "type": "string",
        "maxLength": 50
      },
      "uniqueItems": true,
      "maxItems": 20,
      "description": "Professional skills and competencies"
    },
    "careerGoals": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "career-change",
          "promotion",
          "skill-development",
          "networking",
          "work-life-balance",
          "salary-increase",
          "leadership-role",
          "entrepreneurship",
          "remote-work",
          "international-opportunities"
        ]
      },
      "uniqueItems": true,
      "maxItems": 5,
      "description": "Career objectives and goals"
    },
    "education": {
      "type": "object",
      "properties": {
        "level": {
          "type": "string",
          "enum": ["high-school", "associate", "bachelor", "master", "doctorate", "professional"]
        },
        "field": {
          "type": "string",
          "maxLength": 100
        },
        "institution": {
          "type": "string",
          "maxLength": 100
        },
        "graduationYear": {
          "type": "integer",
          "minimum": 1950,
          "maximum": 2030
        }
      },
      "required": ["level"]
    }
  },
  "additionalProperties": false
}
